<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>


<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.Controller.RentPaymentsController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <BorderPane prefHeight="349.0" prefWidth="561.0">
         <center>
            <TableView prefHeight="313.0" prefWidth="541.0" BorderPane.alignment="CENTER" fx:id="TablePayment">
              <columns>
                <TableColumn prefWidth="75.0" text="ReceiptNo" fx:id="ColReceiptNo" />
                <TableColumn prefWidth="75.0" text="Payment Date" fx:id="ColPaymentDate" />
                  <TableColumn prefWidth="75.0" text="Allocation Code" fx:id="ColAllocationCode" />
                  <TableColumn prefWidth="75.0" text="Amount Paid" fx:id="ColAmountPaid" />
                  <TableColumn prefWidth="75.0" text="Property Code" fx:id="ColPropertyCode" />
                  <TableColumn prefWidth="75.0" text="Property Type" fx:id="ColPropertyType" />
                  <TableColumn prefWidth="75.0" text="MonthlyRent" fx:id="ColMonthlyRent" />
                  <TableColumn prefWidth="75.0" text="Location" fx:id="ColLocation" />
                  <TableColumn prefWidth="75.0" text="Tenant Code" fx:id="ColTenantCode" />
                  <TableColumn prefWidth="75.0" text="Tenant Name" fx:id="ColTenantName" />
                  <TableColumn prefWidth="75.0" text="Contact No" fx:id="ColContactNo" />
              </columns>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </TableView>
         </center>
         <bottom>
            <HBox prefHeight="55.0" prefWidth="471.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#newPayment" text="New Payment...">
                     <HBox.margin>
                        <Insets left="380.0" top="15.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" onAction="#close" text="Close">
                     <HBox.margin>
                        <Insets left="5.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</GridPane>
